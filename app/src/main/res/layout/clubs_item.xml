<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:textSize="30sp"
    tools:visibility="visible">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/club_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/sunset_boy"
        app:civ_border_color="#FFFFFFFF"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/name_club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="17dp"
        android:layout_toEndOf="@+id/club_image"
        android:layout_weight="1"
        android:text="ХУДОжники"
        android:textSize="30sp"
        android:fontFamily="@font/oswaldfamily"
        android:textColor="@color/pink"
        />

    <TextView
        android:id="@+id/type_of_club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="54dp"
        android:layout_toEndOf="@+id/club_image"
        android:layout_weight="1"
        android:fontFamily="@font/oswaldfamily"
        android:text="Искусство"
        android:textColor="@color/pink"
        android:textSize="20sp" />
</RelativeLayout>
