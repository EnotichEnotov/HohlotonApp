<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/clubs"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:fontFamily="@font/oswaldfamily"
        android:gravity="center"
        android:text="Битвы"
        android:textColor="@color/pink"
        android:textSize="60sp" />

    <EditText
        android:id="@+id/clubsname_input"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/clubs"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:autofillHints="true"
        android:background="@drawable/custom_edittext_pink"
        android:fontFamily="@font/oswaldfamily"
        android:gravity="center"
        android:text="Найти"
        android:inputType="text"
        android:padding="14sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="47dp"
        android:layout_below="@+id/clubs"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="14dp"
        android:background="@drawable/search_icon"
        android:backgroundTint="@color/white" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/clubsname_input" />

    <Button
        android:id="@+id/button_create_clubs"
        android:layout_width="233dp"
        android:layout_height="73dp"
        android:layout_below="@id/clubs"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-14dp"
        android:layout_marginTop="-1dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/clubsname_input"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/oswaldfamily"
        android:gravity="center"
        android:text="Создать"
        android:textColor="@color/white"
        android:textSize="30sp" />

</RelativeLayout>